<div class="prettyform">
  <div class="container newanswer">
    <div class="box">
      
      <h3 class="center"><%= @question %></h3>
      <br>

      <%= form_for @answer, :url => question_answers_path(@question_id), remote: true do |f| %>
          
            <%= f.text_area :text, placeholder: 'Type your answer here',  class: 'form-control' %>
          
            <div class="center">
              <%= f.submit "Submit answer", class: 'btn btn-theme btn-xl', id: "submit_answer" %>
            </div>
      <%end%>
      <div id="response">
        <br>
        <h4 class="center"><b>Did you know the answer?</b></h4>
        <div class="row">
          <div class="col-xs-6 yes">
            <a href="#" id="respond-yes" class="btn-flat btn-success"><%= icon('check') %></a>
          </div>
          <div class="col-xs-6">
            <a href="#" id ="respond-no" class="btn-flat btn-pink"><%= icon('times') %></a>
          </div>

        </div>
      </div>  
    </div>
    <br>
    <div id="answers" class="box center">
      <h3>Correct Answer</h3>
      <div class="correct_div">
        <h4 class="correct"><%= @answers[0]["text"] %></h4>
      </div>
    </div>
    <br><br>
  </div>
</div>


