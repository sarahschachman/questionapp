<!DOCTYPE html>
<html>
<head>
  <title>Question App</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header=">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          </button>
            <%= link_to 'QuestionApp', root_path, class: "navbar-brand float" %>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-left">
            <li><%= link_to 'New Question', new_question_path, class: "float" %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
           
            <% if user_signed_in? %>
            <li>
              <%= link_to current_user.email, user_path(current_user), class: "float" %>  
            </li>
            <li><%= link_to 'Sign Out', destroy_user_session_path, method: 'delete', id: 'sign_out', class: "float" %></li>
            <% else %>
            <li><%= link_to 'Sign In', new_user_session_path, class: "float" %></li>
            <% end %>
          </ul>
          
        </div>
      </div>
    </div>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
